@using Microsoft.AspNetCore.Identity;
@inject SignInManager<KnightsOfTheFallenCrown.Core.Domain.ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Knights Of The Fallen Crown</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KnightsOfTheFallenCrown.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/gameStyle.css" />
    <link rel="stylesheet" href="~/css/gameStyle.css" asp-append-version="true" />
</head>
<body class="medievalBackground">
    <header class="medievalHeaderBackground">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid ">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="medievalSecondaryTitleFontOnly">Knights of the fallen crown</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between medievalSecondaryTitleFontOnly">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link medievalSecondaryTitleFontOnly" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link medievalSecondaryTitleFontOnly" asp-area="" asp-controller="Knights" asp-action="Index">My badass Knights</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link medievalSecondaryTitleFontOnly" asp-area="" asp-controller="Battlefields" asp-action="Index">My Battlefields</a>
                        </li>
                    </ul>
                    @* User login section on the navbar *@
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage Account
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <a class="dropdown-item medievalSecondaryTitleFontOnly" asp-controller="Accounts" asp-action="ResetPassword">Delete User</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item medievalSecondaryTitleFontOnly" asp-controller="Accounts" asp-action="ChangePassword">Change Your Password</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>

                            <li class="nav-item " >
                                <form method="post" asp-controller="Accounts" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link py-0 yellow" style="width:auto; padding-top: 0.8rem;">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="nav-link medievalSecondaryTitleFontOnly" asp-controller="Accounts" asp-action="Register">Register</a>
                            </li>
                            <li>
                                <a class="nav-link medievalSecondaryTitleFontOnly" asp-controller="Accounts" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-white Gradient gTZRG">
        <div class="container text-dark">
            &copy; 2024 - Knights of the fallen crown - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
