@model IEnumerable<KnightsOfTheFallenCrown.Models.Battlefields.BattlefieldIndexViewModel>
@* ﻿@model IEnumerable<KnightsOfTheFallenCrown.Models.Battlefields.BattlefieldIndexViewModel> *@
@{
    bool devflag = true;

    int rowNumber = 1;
}
<div class="gTZRG"><a asp-action="Create" asp-controller="Battlefields" type="submit" class="btn btn-primary gTZRG">Create new battlefield</a></div>
@* Admin Control for adding a new astral body of X type into the DB *@

<div class="h1 gTZRG">All battlefields:</div>
<form method="post">
    <table class="table gHT gTZRG">
        <thead class="isCommonWhite">
            <tr>
                @* Later, once images have been implemented, add image here aswell *@
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Name of Battlefield</th>
                <th scope="col">Type of Battlefield</th>
                <th scope="col">Boost type</th>
                <th scope="col">Settlement Count</th>
                <th scope="col">Kardashev Scale</th>
                <th scope="col">Belongs to continent:</th>
                <th scope="col">Actions:</th>

            </tr>
        </thead>
        <tbody class="isCommonBlue">
            @if (!Model.Any())
            {
                <tr>
                    @* Later, once images have been implemented, add image here aswell *@
                    <td>@rowNumber</td>
                    <td>_</td>
                    <td>No battlefields found.</td>
                    <td>_</td>
                    <td>_</td>
                    <td>_</td>
                    <td>_</td>
                    <td>_</td>
                    <td>
                        No actions available.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var battlefield in Model)
                {
                    <tr>
                        @* Later, once images have been implemented, add image here aswell *@
                        <td>@rowNumber</td>
                        <td>@battlefield.ID</td>
                        <td>@battlefield.BattlefieldName</td>
                        <td>@battlefield.BattlefieldType</td>
                        <td>@battlefield.EnvironmentBoost</td>
                        <td>@battlefield.Settlements</td>
                        <td>@battlefield.TechnicalLevel</td>
                        <td>@battlefield.ContinentID</td>
                        <td>
                            
                            <a asp-action="details" asp-controller="battlefields" asp-route-id="@battlefield.ID" class="btn btn-light">INFO</a>
                            <a asp-action="update" asp-controller="battlefields" asp-route-id="@battlefield.ID" class="btn btn-light">EDIT</a>
                            <a asp-action="delete" asp-controller="battlefields" asp-route-id="@battlefield.ID" class="btn btn-light">DEL</a>
                    
                        </td>
                    </tr>
                    rowNumber++;
                }
            }            
        </tbody>
    </table>
</form>
