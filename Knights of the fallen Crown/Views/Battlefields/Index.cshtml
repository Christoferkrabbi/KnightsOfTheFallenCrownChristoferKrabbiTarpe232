@model IEnumerable<KnightsOfTheFallenCrown.Models.Battlefields.BattlefieldIndexViewModel>
@{
    bool devflag = true;

    int rowNumber = 1;
}
<div><a asp-action="Create" asp-controller="Battlefields" type="submit" class="btn medievalButton">Create new battlefield</a></div>
@* Admin Control for adding a new astral body of X type into the DB *@

<div class="medievalTitleFontOnly">All battlefields:</div>
<form method="post">
    <table class="medievalBattlefieldTb">
        <thead class="isCommonWhite">
            <tr>
                @* Later, once images have been implemented, add image here aswell *@
                <th scope="col" colspan="2">#</th>
                <th scope="col" colspan="2">ID</th>
                <th scope="col">Name of Battlefield</th>
                <th scope="col">Type of Battlefield</th>
                <th scope="col">Boost type</th>
                <th scope="col">Settlement Count</th>
                <th scope="col">Kardashev Scale</th>
                <th scope="col">Belongs to continent:</th>
                <th scope="col">Actions:</th>

            </tr>
        </thead>
        <tbody class="isCommonBlue">
            @if (!Model.Any())
            {
                <tr>
                    @* Later, once images have been implemented, add image here aswell *@
                    <td colspan="2">@rowNumber</td>
                    
                    <td colspan="2">_</td>
                    <td>No battlefields found.</td>
                    <td>_</td>
                    <td>_</td>
                    <td>_</td>
                    <td>_</td>
                    <td>_</td>
                    <td>
                        No actions available.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var battlefield in Model)
                {
                    <tr>
                        @* Later, once images have been implemented, add image here aswell *@
                        <td colspan="2">@rowNumber</td>
                        <td colspan="2">@battlefield.ID</td>
                        <td>@battlefield.BattlefieldName</td>
                        <td>@battlefield.BattlefieldType</td>
                        <td>@battlefield.EnvironmentBoost</td>
                        <td>@battlefield.Settlements</td>
                        <td>@battlefield.TechnicalLevel</td>
                        <td>@battlefield.ContinentID</td>
                        <td>
                            
                            <a asp-action="details" asp-controller="battlefields" asp-route-id="@battlefield.ID" class="btn medievalButton">Info</a>
                            <a asp-action="update" asp-controller="battlefields" asp-route-id="@battlefield.ID" class="btn medievalButton">Edit</a>
                            <a asp-action="delete" asp-controller="battlefields" asp-route-id="@battlefield.ID" class="btn medievalButton">Delete</a>
                    
                        </td>
                    </tr>
                    rowNumber++;
                }
            }            
        </tbody>
    </table>
</form>