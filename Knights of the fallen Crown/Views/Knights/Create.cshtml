﻿@using KnightsOfTheFallenCrown.Core.Domain
﻿
@model KnightsOfTheFallenCrown.Models.Knights.KnightCreateViewModel

<div>
    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="form-group-row">
            <label asp-for="KnightName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KnightName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="KnightType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="KnightType" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(KnightTYPE)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="KnightDescription" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KnightDescription" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="PrimaryAttackName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PrimaryAttackName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="PrimaryAttackPower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PrimaryAttackPower" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="SecondaryAttackName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SecondaryAttackName" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="SecondaryAttackPower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SecondaryAttackPower" class="form-control" />
            </div>
        </div>

        <div class="form-group-row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input class="form-control custom-file-input"
                           asp-for="Files"
                           multiple type="file" />
                    <label class="custom-file-label">Choose Images from device -></label>
                </div>
            </div>

        </div>
        @{
            var breakpoint = "";
        }
        <input asp-action="Create" asp-controller="Knights" type="submit"
               class="btn btn-primary" value="Make this Knight" />
        <a asp-action="index" class="btn btn-primary">Cancel</a>

    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileLabel = $(this).next('.custom-file-input');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    fileLabel.html(files.length + ' files selected');
                }
                else if (files.length == 1) {
                    fileLabel.html(files[0].name);
                }
            });
        });
    </script>
}