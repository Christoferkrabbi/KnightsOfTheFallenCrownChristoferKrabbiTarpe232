@model IEnumerable<KnightsOfTheFallenCrown.Models.Knights.KnightsIndexViewModel>


@{
    int rowNumber = 1;
}
<div><a asp-action="Add" asp-controller="Knights" Type="Submit" class="btn btn-primary"> Go on a mission</a></div>


<div class="h1"> Your Knights:</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Heath</th>
                <th scope="col">AdminActions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var knight in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@knight.KnightName</td>
                    <td>@knight.KnightLevel</td>
                    <td>@knight.KnightDescription</td>
                    <td>@knight.KnightHealth</td>                                
                </tr>


                rowNumber++;
            }
        </tbody>
    </table>
</form>


