    <div class="h1 gTZRG">Your Knights:</div>
    <form method="post">
        <table class="table table-hover">
            <thead>
            @if (!Model.Any())
            {
                <tr>
                    @* Later, once images have been implemented, add image here aswell *@
                    <th scope="col" colspan="4" class="gTZRG">
                        <span class="gXmc">Sorry, it appears that</span>
                        <span class="isPlayerName">#playernamehere#</span> 
                        <span class="gXmc">does not have any Knights yet.</span>
                    </th>
                </tr>
            }
            else
            {
                <tr>
                    @* Later, once images have been implemented, add image here aswell *@
                    <th scope="col">Card</th>
                    <th scope="col">Admin Actions</th>
                </tr>
            }


            </thead>
            <tbody>
            @if (!Model.Any() )
            {
                <table class="gTB">
                    <tr class="gTZRG"><td colspan="2">KnightName</td></tr>
                    <tr class="gTZRG"><td colspan="2"><img src="Fh_hero-character-warden_ncsa.png" />
                        </td>
                    </tr>
                    <tr class="gTZRG"><td>Type</td><td>Level</td></tr>
                    <tr class="gTZRG"><td colspan="2">XPBAROBJECT</td></tr>
                </table>
                rowNumber++;
            }
            else
            {
                @foreach (var knight in Model)
                {
                <td>
                    <table class="gTB">
                        <tr class="gTZRG"><td colspan="2">@knight.KnightName</td></tr>
                        <tr class="gTZRG"><td colspan="2"><img width="256" src="~/lib/gameasset/Image/premadeknights/Fh_hero-character-warden_ncsa.png" /></td></tr>
                        <tr class="gTZRG"><td>@knight.KnightType</td>
                            <td>@knight.KnightLevel</td></tr>
                        <tr class="gTZRG"><td colspan="2">XPBAROBJECT</td></tr>
                    </table>
                </td>
                <td>
                        <a asp-action="details" asp-controller="knights" asp-route-id="@knight.ID" class="btn btn-info">KnightDetails</a>
                        <br />
                        <a asp-action="update" asp-controller="knights" asp-route-id="@knight.ID" class="btn btn-info">KnightConfigure</a>
                        <br />
                        <a asp-action="delete" asp-controller="knights" asp-route-id="@knight.ID" class="btn btn-info">KnightDelete</a>
                </td>
                    rowNumber++;
                } 
            }

        </tbody>
        </table>
    </form>
